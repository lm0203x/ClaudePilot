{
  "name": "claudepilot",
  "version": "1.0.0",
  "description": "Claude Code 可视化配置工具",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "claude",
    "config",
    "tool"
  ],
  "author": "ClaudePilot",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.9.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.claudepilot.app",
    "productName": "ClaudePilot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
